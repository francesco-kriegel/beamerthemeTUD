\def\beamer@theme@transition@none{}
\def\beamer@theme@transition@fade{%
  \transfade<1->[duration=0.1618]%
}
\def\beamer@theme@transition@push{%
  \transpush<1>[duration=0.6180,direction=180]%
}
\def\beamer@theme@transition@pushthenfade{%
  \transpush<1>[duration=0.6180,direction=180]%
  \transfade<2->[duration=0.1618]%
  % using this command always creates a second overlay for each frame
}

\let\deftrans\undefined
\DeclareOptionBeamer{transition}
  {\expandafter\let\expandafter\deftrans\csname beamer@theme@transition@#1\endcsname}

