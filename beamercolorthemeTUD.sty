\def\beamer@theme@headline@light{
  \colorlet{framesubtitle}{black}
\setbeamercolor{frametitle}{fg=frametitle,bg=white}
}
\def\beamer@theme@headline@dark{
  \colorlet{framesubtitle}{white}
\setbeamercolor{frametitle}{fg=frametitle}
}

\colorlet{text}{extradarkblue}
\colorlet{frametitle}{gray}
\colorlet{accent}{turquoise}
\colorlet{alink}{skyblue}
\colorlet{vlink}{lightgray}
\colorlet{alert}{ausnahmefarbe}

\setbeamercolor{normal text}{fg=text}
\setbeamercolor{structure}{fg=text}
\setbeamercolor{alerted text}{fg=ausnahmefarbe}
\setbeamercolor{framesubtitle}{fg=framesubtitle}

\DeclareOptionBeamer{headline}{\csname beamer@theme@headline@#1\endcsname}

\ProcessOptionsBeamer
